# ========================================
# .env.example - Matomo Docker Stack
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an
# ========================================

# Projekt-Name
COMPOSE_PROJECT_NAME=matomo

# Backup-Verzeichnis (Host-Pfad)
BACKUPVOLUME=/pfad/zu/ihrem/backup

# Domain für Letsencrypt/Traefik
# Mehrere Domains mit || trennen
HOSTRULE=Host(`ihre-domain.de`) || Host(`ihre-domain.com`)

# CronJob Konfiguration
CRONJOB_USER=www-data

# Apache Konfiguration
APACHE_DOCUMENT_ROOT=/var/www/html

# PHP Konfiguration
PHP_VERSION=8.3
PHP_MEMORY_LIMIT=768M
PHP_INPUT_TIME_MAX_EXECUTION=120
PHP_POST_MAX_SIZE_UPLOAD_MAX_FILESIZE=64M

# Redis Konfiguration
# WICHTIG: Sicheres Passwort generieren (z.B. mit: openssl rand -base64 32)
REDIS_PASSWORD=HIER_SICHERES_PASSWORT_EINTRAGEN

# MariaDB Konfiguration
SQL_DATABASE=MatomoDB
SQL_USER=MatomoUser
# WICHTIG: Sichere Passwörter generieren (z.B. mit: openssl rand -base64 32)
SQL_PASSWORD=HIER_SICHERES_PASSWORT_EINTRAGEN
SQL_ROOT_PASSWORD=HIER_SICHERES_ROOT_PASSWORT_EINTRAGEN

# Netzwerk Konfiguration
PROXY_NETWORK=traefik_proxy_network

# Timezone
TIMEZONE=Europe/Berlin
